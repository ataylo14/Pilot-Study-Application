<Window x:Class="Microsoft.Samples.Kinect.DepthBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Depth Basics" 
        Height="600" Width="700" 
        Closing="MainWindow_Closing">
    <Grid>
        <Image Name="camera" />
        <Grid>
            <StackPanel>
                <Button Content="Color" Click="Color_Click" />
                <Button Content="Depth" Click="Depth_Click" />
                <Button Content="Infrared" Click="Infrared_Click" />
                <Button Content="Body" Click="Body_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
